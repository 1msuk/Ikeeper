#include <stdio.h>

int main() {
	int a;
	scanf("%d", &a);
	int i, j;
	for (i = 1; i <= a; i++) {
		for (j = 1; j <= a - i; j++) {
			printf(" ");
		}
		for (j = 1; j <= i; j++) {
			printf("*");
		}
		printf("\n");
	}
	for (i = a - 1; i > 0; i--) {
		for (j = 1; j <= a - i; j++) {
			printf(" ");
		}
		for (j = 1; j <= i; j++) {
			printf("*");
		}
		printf("\n");
	}
	return 0;
}
